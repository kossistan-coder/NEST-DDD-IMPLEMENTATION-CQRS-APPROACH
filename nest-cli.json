{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/users/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/users/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/users",
  "projects": {
    "users": {
      "type": "application",
      "root": "apps/users",
      "entryFile": "main",
      "sourceRoot": "apps/users/src",
      "compilerOptions": {
        "tsConfigPath": "apps/users/tsconfig.app.json"
      }
    },
    "payment-gateway": {
      "type": "application",
      "root": "apps/payment-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/payment-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/payment-gateway/tsconfig.app.json"
      }
    },
    "lib-users": {
      "type": "library",
      "root": "libs/lib-users",
      "entryFile": "index",
      "sourceRoot": "libs/lib-users/src",
      "compilerOptions": {
        "tsConfigPath": "libs/lib-users/tsconfig.lib.json"
      }
    },
    "lib-auth": {
      "type": "library",
      "root": "libs/lib-auth",
      "entryFile": "index",
      "sourceRoot": "libs/lib-auth/src",
      "compilerOptions": {
        "tsConfigPath": "libs/lib-auth/tsconfig.lib.json"
      }
    },
    "lib-core": {
      "type": "library",
      "root": "libs/lib-core",
      "entryFile": "index",
      "sourceRoot": "libs/lib-core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/lib-core/tsconfig.lib.json"
      }
    },
    "lib-mail": {
      "type": "library",
      "root": "libs/lib-mail",
      "entryFile": "index",
      "sourceRoot": "libs/lib-mail/src",
      "compilerOptions": {
        "tsConfigPath": "libs/lib-mail/tsconfig.lib.json"
      }
    },
    "lib-journal": {
      "type": "library",
      "root": "libs/lib-journal",
      "entryFile": "index",
      "sourceRoot": "libs/lib-journal/src",
      "compilerOptions": {
        "tsConfigPath": "libs/lib-journal/tsconfig.lib.json"
      }
    },
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    }
  }
}